# Nginx configuration for Topo to STL
# Place this in /etc/nginx/sites-available/topo-to-stl
# Then symlink to sites-enabled: sudo ln -s /etc/nginx/sites-available/topo-to-stl /etc/nginx/sites-enabled/

server {
    listen 80;
    # Change this to your domain or IP
    server_name 192.168.0.41 topo.yourdomain.com;

    # Increase body size for large STL file generation
    client_max_body_size 50M;

    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Increase timeouts for terrain generation
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 10240;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss;
    gzip_disable "MSIE [1-6]\.";
}
